<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="136dp"
        android:weightSum="4"
        android:background="#fff">

        <ImageView android:id="@+id/image_view_location"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/ResHallPic"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/text_view_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/locationName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="26sp"/>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Washers -->

                <RelativeLayout
                    android:id="@+id/washers_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/text_view_washer_available_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text_view_washer"
                        android:layout_alignLeft="@id/text_view_washer"
                        android:textSize="28sp"
                        android:textColor="@color/availableCount" />

                    <TextView
                        android:id="@+id/text_view_washer_total_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/text_view_washer_available_count"
                        android:layout_toRightOf="@id/text_view_washer_available_count"
                        android:textSize="20sp"
                        android:textColor="@color/availableCount"/>

                    <TextView
                        android:id="@id/text_view_washer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="14dp"
                        android:text="@string/washers_available"/>

                </RelativeLayout>

                <!-- Dryers -->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/washers_layout"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/text_view_dryer_available_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text_view_dryer"
                        android:layout_alignLeft="@id/text_view_dryer"
                        android:textSize="28sp"
                        android:textColor="@color/availableCount" />

                    <TextView
                        android:id="@+id/text_view_dryer_total_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/text_view_dryer_available_count"
                        android:layout_toRightOf="@id/text_view_dryer_available_count"
                        android:textSize="20sp"
                        android:textColor="@color/availableCount"/>

                    <TextView
                        android:id="@id/text_view_dryer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="14dp"
                        android:text="@string/dryers_available"/>

                </RelativeLayout>

