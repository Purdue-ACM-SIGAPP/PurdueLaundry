<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3">

        <ImageView android:id="@+id/image_view_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/dryer_running"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:id="@+id/text_view_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                style="@style/Location_TextView"/>

            <TextView android:id="@+id/text_view_washer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_location_name"
                android:layout_alignParentLeft="true"
                android:textColor="#00ffff"
                style="@style/Amount_TextView"/>

            <TextView android:id="@+id/washer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_washer_count"
                android:layout_alignLeft="@id/text_view_washer_count"
                android:layout_alignRight="@id/text_view_washer_count"
                android:text="@string/dryers_available"/>

            <TextView android:id="@+id/text_view_dryer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_location_name"
                android:layout_alignParentRight="true"
                android:textColor="#ff0d00"
                style="@style/Amount_TextView"/>

            <TextView android:id="@+id/text_view_dryer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_dryer_count"
                android:layout_alignLeft="@id/text_view_dryer_count"
                android:ellipsize="marquee"
                android:text="@string/washer_available"/>


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>