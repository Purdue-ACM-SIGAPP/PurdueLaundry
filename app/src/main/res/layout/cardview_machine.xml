<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardCornerRadius="3dp"
            card_view:cardBackgroundColor="@color/bgGray"
            card_view:cardUseCompatPadding="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/transparentWhite"
                    android:id="@+id/machine_name_text_view"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:text="Dryer 014"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@+id/machine_name_text_view"
                    android:layout_marginTop="-2dp"
                    android:id="@+id/machine_status_text_view"
                    android:maxLines="1"
                    android:textSize="20dp"
                    android:text="In use"/>

            <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/gray"-->
                    <!--android:id="@+id/machine_time_left_text_view"-->
                    <!--android:layout_below="@+id/machine_status_text_view"-->
                    <!--android:paddingTop="15dp"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--android:text="99 Minutes Left"/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>